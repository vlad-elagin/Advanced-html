nav.social
nav.footer-nav
  a
    display block
    height 17px
    padding 0 5px
    z-index 0

    color black
    font-family 'OratorSTD'
    text-decoration none
    position relative
    font-size 13px
    line-height 20px

    // dont forget to set proper content for after

    &:before
      content ''
      display block
      position absolute
      left 0
      top 0
      z-index 1
      width 0
      height 100%

      background-color black
      transform skew(-20deg)
      transition width .3s ease


    &:after
      content ''
      display block
      position absolute
      left 0
      top 0
      height 100%
      width 0
      z-index 2
      padding 0 0 0 5px

      color white
      overflow hidden
      transition width .3s ease

    &:hover
      &:before
        width 100%
      &:after
        width 100%

.arrowed-link
  position absolute

  color black
  text-decoration none

  transition transform .3s ease

  &:hover
    transform translateX(5px)

  &:before
  &:after
    content ''
    display block
    background-color black
    height 2px
    position absolute

  &:before
    width 87%
    top 50%
    right 0

  &:after
    width 15%
    top 40%
    transform rotate(45deg)
    right 0

  span
    position absolute
    bottom 0px
    right 0

    font-family 'HalisR'
    font-weight 300
    font-size 14px
    color black
    line-height 12px

    letter-spacing -0.3px
