.nutrients-bar
  position absolute
  z-index 2
  left 50%
  top 50%
  transform translate(-50%, -50%)

  display flex
  flex-flow column nowrap
  justify-content space-around
  align-items center

  border-radius 30px

  width 60px
  height 240px

  padding 10px 0
  opacity 0
  transition opacity .3s ease

  .nutrient
    display flex
    flex-direction column
    align-items center

    span
      color $color-black
      font-family 'HalisR'
      &:first-of-type
        text-transform uppercase
        font-size 10px

      &:nth-of-type(2)
        font-family 'OratorStd'
        font-size 24px
        height 20px

      &:last-of-type
        font-size 10px

  // colors
  &.color-green
    background-color rgba($color-green, 0.7)

  &.color-red
    background-color rgba($color-red, 0.7)

  &.color-yellow
    background-color rgba($color-yellow, 0.7)

// active states
.product-wrapper.active .nutrients-bar
  opacity 1
