$color-black = #323232

.btn
  display block
  width 210px
  height 50px
  margin-left 10px

  font-family 'HalisR'
  text-align center
  text-decoration none

  border-radius 25px
  cursor pointer


  &:first-of-type
    margin-top 55px
    margin-bottom 20px

  &-filled
    background-color $color-black
    border 3px solid $color-black
    color white


    font-weight 900
    font-size 14px
    letter-spacing 0.8px
    line-height 44px

    transition all .3s ease

    &:hover
      background-color white
      color $color-black

  &-more
    border 1px solid $color-black
    color $color-black

    line-height 48px
    font-size 12px
