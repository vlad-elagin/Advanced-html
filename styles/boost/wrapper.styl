.boost-wrapper
  width 100%
  height 710px
  position relative

  margin-top 125px

  padding 115px 0 0 34%

  // display above side part
  & > *
    position relative
    z-index 2

  h1
    font-family 'HalisR'
    font-weight 900
    font-size 110px
    user-select none
    line-height 95px
    width 200px
    margin 0
    letter-spacing -5px

  p
    font-family 'OratorStd'
    font-weight 500
    font-size 12px
    letter-spacing -1.8px
    text-transform uppercase

    margin 25px 0 0 10px
