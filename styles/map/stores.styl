clip-path-img-active()
  clip-path polygon(
    20px 20px,
    385px 0,
    100% 100%,
    2% 97%
  )

clip-path-img()
  clip-path polygon(
    20px 20px,
    385px 0,
    100% 100%,
    10px 210px
  )

.stores-wrapper
  position absolute
  z-index 3
  top 415px
  left 200px

  outline 1px solid yellow

  width 1500px
  height 300px

  display flex
  justify-content space-between
  align-items flex-start

  /* =============================
    STORE STYLES
  ============================== */
  .store
    outline 1px solid green

    width 400px
    height 230px
    position relative

    // ====== clipped shop photo =======
    .shop-image
      position relative
      z-index 1

      img
        width 100%
        height 100%
        position relative
        z-index 2
        clip-path-img-active()

    // ======= back layer with info ======
    .backlayer
      visibility hidden

      position absolute
      left 0
      top 0
      width 100%
      height 100%

      transition all .3s ease
      background-color $store-backlayer
      clip-path-img-active()

      display flex
      justify-content space-between
      align-items flex-end
      padding-bottom 15px
      padding-left 20px
      padding-right 30px

      font-family 'HalisR'
      color white
      font-size 12px

      .arrowed-link
        position relative
        width 65px
        height 45px

        &:before
        &:after
          background-color white

        &:after
          top 42%

        span
          color white
          font-size 12px

    // ====== active state =======
    &.active

      .shop-image
        filter drop-shadow(20px 12px 25px rgba(black, 0.4))
        img
          clip-path-img-active()

      .backlayer
        visibility visible
        top 20px
        left 30px
        width 95%
        height 120%
        clip-path none
