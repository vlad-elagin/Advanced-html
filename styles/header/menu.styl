$bg = #202020

$link-color = #4d4c4c
$link-color-hovered = #fff

nav.menu
  display flex
  flex-flow column nowrap
  align-items center
  padding-top 30px
  height 660px
  width 90px
  position relative
  background-color $bg

  &:after
    content ''
    position absolute
    bottom 0
    right 0
    height 10px
    width 90px
    border-left 45px solid transparent
    border-top 5px solid transparent
    border-right 45px solid white
    border-bottom 5px solid white

  .logo-link
    width 55px
    margin-bottom 55px

  .link
    display block
    width 100%
    text-align center
    position relative
    span
      position absolute
      width 100%
      font-size 10px
      text-transform uppercase
      text-align center
      bottom 0
      left 0
      color $link-color
      transition color .2s ease
    svg .sidemenu-icon
        transition fill 0.2s ease
        fill $link-color
    &:hover
      span
        color $link-color-hovered
      svg .sidemenu-icon
        fill $link-color-hovered
    &.juice
      height 57px
      margin-bottom 52px
      svg
        height 33px
    &.shakes
      height 60px
      margin-bottom 52px
      svg
        height 40px
    &.handmeals
      height 60px
      margin-bottom 52px
      svg
        height 42px
    &.sandwich
      height 60px
      svg
        height 37px
